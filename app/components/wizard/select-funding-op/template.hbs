  {{#if errorMessage}}
    <div class="alert alert-warning">
      {{errorMessage}}
    </div>
  {{/if}}

  <div class="panel panel-default">
    <!-- <div class="panel-heading"> -->
      <h3 class="panel-title">Funding Opportunities</h3>
    <!-- </div> -->
    <div class="panel-body">
      {{pagination-control currentPage=currentPage totalPages=totalPages totalRecordsShown=liveFilterLength startRecord=startRecord endRecord=endRecord changePageSize=(action 'changePageSize')}}

      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Select</th>
            <th class="sortable-header" {{action 'sortBy' "id"}}>Solicitation Number</th>
            <th class="sortable-header" {{action 'sortBy' "title"}}>Program Announcement</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>

            <td>
              <div class="input-group">
                {{input value=idFilter}}
                <span class=class="input-group-addon">
                  <i class="fa fa-search"></i>
                </span>
              </div>
            </td>
            <td>
              <div class="input-group">
                {{input value=titleFilter}}
                <span class=class="input-group-addon">
                  <i class="fa fa-search"></i>
                </span>
              </div>
            </td>
          </tr>
          {{#each recordsShown as |fundingOp|}}
            <tr>
              <td>
                {{radio-button groupValue=fundingOpChoice value=fundingOp}}
              </td>
              <td>{{fundingOp.id}}</td>
              <td>{{fundingOp.title}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      {{pagination-control currentPage=currentPage totalPages=totalPages totalRecordsShown=liveFilterLength startRecord=startRecord endRecord=endRecord changePageSize=(action 'changePageSize')}}

    </div>
  </div>

  <button class="btn btn-primary" {{action 'next'}}>Next</button>

</div>

{{yield}}
