
<div class="col-xs-12">
  <h2>Select Divisions and Programs</h2>
</div>

<div class="col-xs-10 col-xs-offset-1">

  <!-- BODY -->

  <p>Select Division
    <select onchange={{action "selectDivision" value="target.value"}}>
      <option>--Select One--</option>
      {{#each workingDivs as |divisionChoice index|}}
        <option value={{index}} selected={{eq currDivSelection divisionChoice}}>{{divisionChoice.description}}</option>
      {{/each}}
    </select>
  </p>

  <p>Select Program
    {{#if (eq currDivSelection null) }}
    <select disabled>
      <option>Select Division first</option>
    </select>
    {{else}}
      <select onchange={{action "selectProgram" value="target.value"}}>
        <option>--Select One--</option>
        {{#each availablePrograms as |programChoice index|}}
          <option value={{index}} selected={{eq currProgramSelection programChoice}}>{{programChoice.description}}</option>
        {{/each}}
    </select>
    {{/if}}

    <a href="#" {{action "addProgramField"}}>Select additional program</a>
  </p>

  <!-- <p>Select Program
    <select onchange={{action "selectDivision" value="target.value"}}>
      {{#each workingDivs as |divisionChoice|}}
        <option value={{divisionChoice}} selected={{eq currDivSelection divisionChoice}}>{{divisionChoice.description}}</option>
      {{/each}}
    </select>
  </p> -->



  <button class="btn btn-default" {{action 'previous'}}>Previous</button>
  <button class="btn btn-primary" {{action 'next'}}>Next</button>

</div>

{{yield}}
